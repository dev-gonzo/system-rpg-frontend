{
  "name": "system-rpg",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run lint && npm run test:coverage && npx ng serve",
    "build": "npm run verify && npx ng build",
    "build:coverage": "npm run lint && npm run test:coverage && npx ng build",
    "watch": "npx ng build --watch --configuration development",
    "test": "npx ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "npx ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "npm run check-comments && eslint . --ext .ts,.html --fix",
    "lint:check": "npm run check-comments && eslint . --ext .ts,.html && echo  ESLint passou com sucesso!",
    "check-comments": "node scripts/check-comments.js",
    "verify": "npm run lint && npm run test",
    "prepare": "husky",
    "generate-env": "node scripts/generate-env.js"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,html,css,scss}": [
      "npm run check-comments",
      "eslint --fix",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.0",
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.2.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@mdi/js": "^7.4.47",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "date-fns": "^4.1.0",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "ngx-mask": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "yup": "^1.6.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "angular-eslint": "^20.1.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-recommended-scss": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.40.0"
  }
}
